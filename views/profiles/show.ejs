<%- include('../partials/html-head') %>
  <link rel="stylesheet" href="/stylesheets/profiles/show.css">
  <%- include('../partials/nav') %>

    <main>
      <div class="card-container">
        <div class="card">
          <img class="profile-avatar" src="<%= profile.avatar %>" alt="<%= profile.name %>'s avatar">
          <div id="name"><%= profile.name %></div>
          <div class="info-section">
            <div class="status">Email:</div>
            <div><%= theUser[0].email %> </div>
          </div>
          <div class="info-section">
            <div class="status">Number of Collections:</div>
            <div><% if(user.profile._id.equals(profile._id)){ %></div>
                You have 
              <% }else{ %>
                <%= profile.name %> <br> has  
              <% } %> collected
              <%= profile.collections.length %> fashion 
              <% if (profile.collections.length < 2) { %>
                item!
              <% }else{ %>
              items!
              <% } %> 
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>